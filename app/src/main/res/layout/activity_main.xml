<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.berka.asajmentzaslanje.MainActivity"
    android:padding="10dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/numOfClicksTextView"
        android:textSize="30sp"
        android:background="#f8f873"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/numOfClicksTextView"
        android:layout_alignParentStart="true"
        android:id="@+id/tableLayout">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <TextView
                android:text="*"
                android:gravity="center"
                android:id="@+id/front1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#7afc7e"
                android:layout_margin="10dp"
                android:onClick="show"
                android:textSize="50dp"
                android:tag="0"/>

            <TextView
                android:text="*"
                android:gravity="center"
                android:id="@+id/front2"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#7afc7e"
                android:layout_margin="10dp"
                android:onClick="show"
                android:textSize="50dp"
                android:tag="1"/>

            <TextView
                android:text="*"
                android:gravity="center"
                android:id="@+id/front3"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#7afc7e"
                android:layout_margin="10dp"
                android:onClick="show"
                android:textSize="50dp"
                android:tag="2"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <TextView
                android:text="*"
                android:gravity="center"
                android:id="@+id/front4"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#7afc7e"
                android:layout_margin="10dp"
                android:onClick="show"
                android:textSize="50dp"
                android:tag="3"/>


            <TextView
                android:text="*"
                android:gravity="center"
                android:id="@+id/front5"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#7afc7e"
                android:layout_margin="10dp"
                android:onClick="show"
                android:textSize="50dp"
                android:tag="4"/>

            <TextView
                android:text="*"
                android:gravity="center"
                android:id="@+id/front6"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#7afc7e"
                android:layout_margin="10dp"
                android:onClick="show"
                android:textSize="50dp"
                android:tag="5"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <TextView
                android:text="*"
                android:gravity="center"
                android:id="@+id/front7"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#7afc7e"
                android:layout_margin="10dp"
                android:onClick="show"
                android:textSize="50dp"
                android:tag="6"/>

            <TextView
                android:text="*"
                android:gravity="center"
                android:id="@+id/front8"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#7afc7e"
                android:layout_margin="10dp"
                android:onClick="show"
                android:textSize="50dp"
                android:tag="7"/>

            <TextView
                android:text="*"
                android:gravity="center"
                android:id="@+id/front9"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#7afc7e"
                android:layout_margin="10dp"
                android:onClick="show"
                android:textSize="50dp"
                android:tag="8"/>
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f9f94c"
        android:padding="30dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:id="@+id/playAgainLayout">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/playerInputName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/winnerMessage"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Add Score"
            android:id="@+id/addScoreButton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Tabele"
            android:id="@+id/viewAllButton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play Again"
            android:id="@+id/playAgainButton"
            android:layout_gravity="center_horizontal"
            android:onClick="playAgain"
            android:visibility="visible" />

    </LinearLayout>
</RelativeLayout>